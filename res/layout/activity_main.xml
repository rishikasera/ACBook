    <TextView
    android:id="@+id/cashbal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="25sp"
    android:text="0"
    android:layout_marginBottom="5dp"/>


    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="setDate"
        />


    <EditText
        android:id="@+id/pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textAlignment="center"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:hint="Amount paid"

        />


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/BuzzType">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit         "
            android:id="@+id/BuzzTypeDebit"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit         "
            android:id="@+id/BuzzTypeCredit"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NDNC"
            android:id="@+id/BuzzTypeNDNC"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


    <Spinner
        android:id="@+id/dc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:prompt="@string/spinner_title"
        android:layout_marginTop="10dip"
        />


    <EditText
        android:id="@+id/cas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dip"
        android:maxLines="1"
        android:lines="1"
        android:imeOptions="actionDone"
        android:hint="Cause/Source"

        />



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveRecordBtn9"
        android:text="Save Record"
        android:layout_marginTop="10dip"
        android:onClick="saveRecord"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showRecordActivityBtn"
        android:text="Show Record Activity"
        android:layout_marginTop="10dip"
        android:onClick="showRecordActivity"
        />






<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="10dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cashbal3"
            android:layout_width="74dip"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/sbibal3"
            android:layout_width="74dip"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/hdfcbal3"
            android:layout_width="74dip"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/hdfcccbal3"
            android:layout_width="74dip"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="0"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Show Table"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:padding="2dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="Cash"
            android:onClick="showCashTable"
            />

        <Button
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="SBI"
            android:onClick="showSBITable"
            />

        <Button
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:text="HDFC"
            android:onClick="showHDFCTable"
            />

        <Button
            android:layout_width="85dip"
            android:layout_height="wrap_content"
            android:text="HDFC CC"
            android:onClick="showHDFCCCTable"
            />

    </LinearLayout>

       <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:onClick="backToMain"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print"
        android:onClick="printAllTable"
        />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text=""/><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:text=""/>






    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete all Record"
        android:onClick="deleteAll"
        />

</LinearLayout>
